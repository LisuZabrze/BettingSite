<!doctype html>
<html lang="pl">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Typowanie NBA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  </head>
  <body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>  
    <h1>Typy</h1>
    <table>
    <thead>
      <tr>
        <th>Home Team</th>
        <th>Away Team</th>
        <th>Bet Score 1</th>
        <th>Bet Score 2</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td><%= game.team_home.name %></td>
          <td><%= game.team_away.name %></td>
          <% if game.date >= Date.today && game.time >= Time.now %>
            <td><%= form_tag(game_bets_path(game), method: :post) do %>
                  <%= number_field_tag "bet_score_1", "", min: 0, max: 10 %>
            <% end %></td>
            <td><%= form_tag(game_bets_path(game), method: :post) do %>
                  <%= number_field_tag "bet_score_2", "", min: 0, max: 10 %>
            <% end %></td>
          <% else %>
            <td><%= game.bet_score_1 %></td>
            <td><%= game.bet_score_2 %></td>
          <% end %>
          <td>
            <% if game.date >= Date.today && game.time >= Time.now %>
              <%= form_tag(game_bet_path(game), method: :delete, data: { confirm: 'Are you sure?' }) do %>
                <%= submit_tag "Delete", class: "btn btn-danger" %>
              <% end %>
              <%= link_to "Edit", edit_game_bet_path(game), class: "btn btn-primary" %>
            <% else %>
              <%= link_to "View Bet", game_bet_path(game), class: "btn btn-info" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
    </body>
</html> 




