<h2>Zmień hasło</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :Email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Wpisz swój email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :Hasło %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Minimum 6 znaków. Pozostaw to pole puste jeżeli nie chcesz zmieniać" %>
  </div>

  <div class="field">
    <%= f.label :Powtórz_hasło %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Wpisz ponownie powyższe hasło" %>
  </div>

  <div class="field">
    <%= f.label :Aktualne_hasło %>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "Wpisz swoje aktualne hasło, jeśli chcesz je zmienić" %>
  </div>

  <div class="actions">
    <%= f.submit "Aktualizuj", class: "btn btn-secondary" %>
  </div>
<% end %>

<h3>Usuń konto</h3>

<div>Klikając poniżej usuwasz swoje konto... <%= button_to "Usuń konto", registration_path(resource_name), class: "btn btn-danger", data: { confirm: "Jesteś pewny?", turbo_confirm: "Jesteś pewny?" }, method: :delete %></div>

<%= link_to "Back", :back, class: "btn btn-secondary" %>
