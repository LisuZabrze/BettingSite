<!doctype html>
<html lang="pl">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Typowanie NBA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  </head>
  <body>

  <div id="<%= dom_id @game %>">
    <table style="table-layout:fixed"; class="table table-striped table-bordered table-hover">
        <tr>
          <td style="width:10%; vertical-align: middle"><strong> <%= @game.team_home ? @game.team_home.name : "undefined"%></strong></td>
          <td style="width:10%; vertical-align: middle"><strong> <%= @game.team_away ? @game.team_away.name : "undefined"%></strong></td>
        </tr>
        <tr>
          <td style="width:3%; vertical-align: middle"><%= @game.score_home %></td>
          <td style="width:3%; vertical-align: middle"><%= @game.score_away %></td> 
        </tr>
    </table>
  </div>

<div>
  <%= link_to "Edytuj ten mecz", edit_game_path(@game), class: "btn btn-secondary" %> <br><br>
  <%= link_to "Powrót do listy meczy", games_path, class: "btn btn-secondary" %>
<br><br>
  <%= button_to "Usuń ten mecz", @game, class: "btn btn-danger", method: :delete %>
</div>

  </body>
    </html>